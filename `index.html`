 `app.js`
// Simple AI idea generator (mocked for now)
const generateIdeas = () => {
  const niches = [
    "fitness", "travel", "tech", "food", "music", "lifestyle", "education", "business"
  ];
  
  const topics = {
    fitness: [
      "10-minute home workout routine",
      "Best protein sources for muscle gain",
      "How to stay consistent with fitness"
    ],
    travel: [
      "Hidden gems in Bali",
      "Budget travel tips for Europe",
      "Solo travel safety checklist"
    ],
    tech: [
      "Top 5 AI tools for creators in 2025",
      "How to use AI for content creation",
      "Future of web development"
    ],
    food: [
      "Quick healthy meal prep ideas",
      "Vegan recipes under 15 minutes",
      "Meal planning for weight loss"
    ],
    music: [
      "How to make viral TikTok songs",
      "Best free music production tools",
      "Music trends in 2025"
    ]
  };

  const niche = document.getElementById('nicheInput').value.trim().toLowerCase();
  const container = document.getElementById('ideasContainer');

  if (!niche) {
    alert("Please enter your niche!");
    return;
  }

  // Mock AI response
  const suggestions = topics[niche] || topics.fitness;

  container.innerHTML = '';

  suggestions.forEach((idea, index) => {
    const card = document.createElement('div');
    card.className = 'idea-card';
    card.innerHTML = `
      <h3>${idea}</h3>
      <p>Format: Reel / Carousel / Post</p>
    `;
    container.appendChild(card);
  });
};

// Event listeners
document.getElementById('generateBtn').addEventListener('click', generateIdeas);

// Allow Enter key to trigger
document.getElementById('nicheInput').addEventListener('keypress', function(e) {
  if (e.key === 'Enter') {
    generateIdeas();
  }
});
